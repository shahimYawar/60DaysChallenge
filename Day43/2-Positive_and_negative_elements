// } Driver Code Ends




//User function Template for Java

class Solution
{
    ArrayList<Long> arranged(long a[], int n)
    {
    ArrayList<Long> p=new ArrayList<>();
    ArrayList<Long> neg=new ArrayList<>();
    ArrayList<Long> c=new ArrayList<>();
    for(int i=0;i<n;i++){
        if(a[i]<0)
            neg.add(a[i]);
        else
            p.add(a[i]);
    }
    while(!p.isEmpty() || !neg.isEmpty()){
        c.add(p.remove(0));
        c.add(neg.remove(0));
    }

    return c;
    }
}
